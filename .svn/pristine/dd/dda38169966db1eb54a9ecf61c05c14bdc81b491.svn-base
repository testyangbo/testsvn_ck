import { test, expect } from '@playwright/test';
import { LoginPage } from '../pages/login.page';
import { TEST_ACCOUNT } from '../data/testData';

// 在测试配置中添加
test.use({ storageState: 'cookies/auth.json' });
// 复用登录状态
test('报表类型页面访问测试', async ({ page }) => {

  // 导航到报表类型页面
  await page.goto('http://www.qfbjyun.com/qiankun/report/ptype');
  
  // 验证页面加载成功
  await expect(page).toHaveURL(/\/report\/ptype/);
  await expect(page).toHaveTitle(/商品资料-千方百剂云/);

  await page.getByText('采购业务').hover();
  await page.getByText('采购订单', { exact: true }).click();
});